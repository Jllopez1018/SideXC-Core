@model IEnumerable<SideXC.WebUI.Models.Human_Resources.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrossSalary)
